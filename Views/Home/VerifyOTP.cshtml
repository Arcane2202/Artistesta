@model Artistesta.Models.OTP
@{
    ViewBag.Title = "VerifyOTP";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/StyleSheet1.css" rel="stylesheet" />
<body style="background-image: url('../Content/background.jpg'); background-size: cover">
    <h2 style="margin-top:60px; margin-bottom:100px">VerifyOTP</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group" style="margin-top:100px; margin-bottom:15px">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.OTPcode, new { htmlAttributes = new { @class = "form-control", Style = "Box-Shadow:none", PlaceHolder = "Enter OTP" } })
                    @Html.ValidationMessageFor(model => model.OTPcode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label style="color:red">@ViewBag.msg</label>
                </div>
            </div>

            <div class="form-group" style="margin-top:5px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Verify" class="btn button" />
                </div>
            </div>
        </div>


    }

    <div>
        @Html.ActionLink("Change Email?", "Signup")
    </div>
    </body>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


